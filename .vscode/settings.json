{
  "[glsl]": {
    "editor.rulers": [100],
    "editor.tabSize": 4
  },

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.rulers": [100],
    "editor.tabSize": 4
  },

  "[vue]": {
    "editor.defaultFormatter": "octref.vetur",
    "editor.formatOnSave": true,
    "editor.rulers": [100],
    "editor.tabSize": 2
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.rulers": [100],
    "editor.tabSize": 2
  },

  "files.exclude": {
    "**/.gitignore": true,
    ".vscode": true,
    "Cargo.lock": true,
    "pkg": true,
    "target": true,
    "viewer/dist": true,
    "viewer/node_modules": true,
    "viewer/yarn.lock": true
  },

  "files.insertFinalNewline": true
}
