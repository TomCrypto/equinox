{
  "[glsl]": {
    "editor.rulers": [100],
    "editor.tabSize": 4
  },

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.rulers": [100],
    "editor.tabSize": 4
  },

  "[vue]": {
    "editor.defaultFormatter": "octref.vetur",
    "editor.formatOnSave": true,
    "editor.rulers": [100],
    "editor.tabSize": 2
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.rulers": [100],
    "editor.tabSize": 2
  },

  "eslint.options": {
    "extensions": [".ts", ".vue"]
  },

  "eslint.validate": [{
    "language": "ts",
    "autoFix": true
  }, {
    "language": "vue",
    "autoFix": true
  }],

  "eslint.workingDirectories": ["./viewer"],

  "files.exclude": {
    "**/.gitignore": true,
    ".vscode": true,
    "Cargo.lock": true,
    "pkg": true,
    "target": true,
    "viewer/dist": true,
    "viewer/node_modules": true
  },

  "files.insertFinalNewline": true
}
